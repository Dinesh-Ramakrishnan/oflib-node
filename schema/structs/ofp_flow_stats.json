{
    "id" : "ofp_flow_stats",
    "type" : "object",
    "properties" : [
        "table_id" : {"$ref" : "../types/uint8_req.json"},
        "duration_sec" : {"$ref" : "../types/uint32_req.json"},    /* Time flow was alive in seconds. */
        "duration_nsec" : {"$ref" : "../types/uint32_req.json"},   /* Time flow was alive in nanoseconds beyond
                                                                      duration_sec. */
        "priority" : {"$ref" : "../types/uint16_req.json"},        /* Priority level of flow entry. */
        "idle_timeout" : {    /* Number of seconds idle before expiration. */
            "extends" : {"$ref" : "../types/uint16_req.json"},
            "description" : "if not present, timeout was not set"
        },
        "hard_timeout" : {    /* Number of seconds before expiration. */
            "extends" : {"$ref" : "../types/uint16_req.json"},
            "description" : "if not present, timeout was not set"
        },
        "cookie" : {"$ref" : "../types/cookie_req.json"}          /* Opaque controller-issued identifier. */
        "packet_count" : {"$ref" : "../types/uint64_req.json"},
        "byte_count" : {"$ref" : "../types/uint64_req.json"},
        "match" : {   /* Description of fields. */
            "extends" : {"$ref" : "./ofp_match_header.json"},
            "required" : true
        },
        "instructions" : { /* Instruction set. */
            "type" : "array",
            "items" : {"$ref" : "../instructions/ofp_instruction.json"},
            "uniuqeItems" : true,
            "required" : true
        }
    ]
}
