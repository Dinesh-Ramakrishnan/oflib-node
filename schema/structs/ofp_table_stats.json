{
    "id" : "ofp_table_stats",
    "type" : "object",
    "properties" : [
        "table_id" : {"$ref" : "../types/uint8_req.json},  /* Identifier of table.  Lower numbered tables
                                                              are consulted first. */
        "name": {
            "type" : "string",
            "maxLength" : 32,  /* OFP_MAX_TABLE_NAME_LEN */
            "required" : true
        },
        "wildcards" : {   /* Wildcards that are supported by the table. */
            "type" : "array",
            "items" : {"$ref" : "../constants/ofp_flow_match_fields.json"},
            "uniqueItems" : true,
            "required" : true
        },
        "match" : {          /* The fields the table can match on. */
            "type" : "array",
            "items" : {"$ref" : "../constants/ofp_flow_match_fields.json"},
            "uniqueItems" : true,
            "required" : true
        },
        "instructions" : {
            "type" : "array",
            "items" : {"$ref" : "../constants/ofp_instruction_type.json"},
            "uniqueOtems" : true,
            "required" : true
        },
        "write_actions" : {  /* Actions that are supported
                                by the table with OFPIT_WRITE_ACTIONS. */
            "type" : "array",
            "items" : {"$ref" : "../constants/ofp_action_type.json"},
            "uniqueOtems" : true,
            "required" : true
        },
        "apply_actions" : {  /* Actions that are supported
                                by the table with OFPIT_APPLY_ACTIONS. */
            "type" : "array",
            "items" : {"$ref" : "../constants/ofp_action_type.json"},
            "uniqueOtems" : true,
            "required" : true
        },
        "config" : {
            "type" : "array",
            "items" : {"$ref" : "../constants/ofp_table_config.json"},
            "uniqueOtems" : true,
            "required" : true
        },
        "max_entries" : {"$ref" : "../types/uint32_req.json"},    /* Max number of entries supported. */
        "active_count" : {"$ref" : "../types/uint32_req.json"},   /* Number of active entries. */
        "lookup_count" : {"$ref" : "../types/uint64_req.json"},   /* Number of packets looked up in table. */
        "matched_count" : {"$ref" : "../types/uint64_req.json"}   /* Number of packets that hit table. */
    ]
}
