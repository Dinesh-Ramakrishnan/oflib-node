{
    "id" : "ofp_match_standard",
    "type" : "object",
    "properties" : [
        "in_port" : {             /* Input switch port. */
            "extends" : {"$ref" : "../types/port_id.json"},
            "minLength" : 8,
            "maxLength" : 8
            "description" : "if not set, the field is wildcarded"
        },
        "dl_src" : {    /* Ethernet source address. */
            "extends" : {"$ref" : "../types/ethernet_addr.json"},
            "description" : "if not set, the field is wildcarded"
        },
        "dl_src_mask" : {    /* Ethernet source address mask. */
            "extends" : {"$ref" : "../types/ethernet_addr.json"},
            "description" : "only meaningful if dl_src is set; if this field is not set, no masking is applied"
        },
        "dl_dst" : {    /* Ethernet destination address. */
            "extends" : {"$ref" : "../types/ethernet_addr.json"},
            "description" : "if not set, the field is wildcarded"
        },
        "dl_dst_mask" : {    /* Ethernet destination address mask. */
            "extends" : {"$ref" : "../types/ethernet_addr.json"},
            "description" : "only meaningful if dl_dst is set; if this field is not set, no masking is applied"
        },
        "dl_vlan" : {          /* Input VLAN id. */
            "type" : [{"$ref" : "../types/uint16.json"},
                      {"$ref" : "../constants/ofp_vlan_id.json"}]
            "description" : "if not set, the field is wildcarded"
        },
        "dl_vlan_pcp" : {      /* Input VLAN priority. */
            "type" : {"$ref" : "../types/uint8.json"},
            "minimum" : 0x00,
            "maximum" : 0x07
            "description" : "if not set, the field is wildcarded"
        },
        "dl_type" : {      /* Ethernet frame type. */
            "type" : "number",
            "minimum" : 0x0000,
            "maximum" : 0xffff,
            "description" : "if not set, the field is wildcarded"
        },
        "nw_tos" : {      /* IP ToS (actually DSCP field, 6 bits). */
            "type" : "number",
            "minimum" : 0x00,
            "maximum" : 0x3f,
            "description" : "if not set, the field is wildcarded"
        },
        "nw_proto" : {      /* IP protocol or lower 8 bits of
                             * ARP opcode. */
            "type" : "number",
            "minimum" : 0x0000,
            "maximum" : 0xffff,
            "description" : "if not set, the field is wildcarded"
        },
        "nw_src" : {         /* IP source address. */
            "extends" : {"$ref" : "../types/ipv4_addr.json"},
            "description" : "if not set, the field is wildcarded"
        },
        "nw_src_mask" : {    /* IP source address mask. */
            "extends" : {"$ref" : "../types/ipv4_addr.json"},
            "description" : "only meaningful if nw_src is set; if this field is not set, no masking is applied"
        },
        "nw_dst" : {         /* IP destination address. */
            "extends" : {"$ref" : "../types/ipv4_addr.json"},
            "description" : "if not set, the field is wildcarded"
        },
        "nw_dst_mask" : {    /* IP destination address mask. */
            "extends" : {"$ref" : "../types/ipv4_addr.json"},
            "description" : "only meaningful if nw_dst is set; if this field is not set, no masking is applied"
        },
        "tp_src" : {    /* TCP/UDP/SCTP source port. */
            "extends" : {"$ref", "../types/uint16.json"},
            "description" : "if not set, the field is wildcarded"
        },
        "tp_dst" : {    /* TCP/UDP/SCTP destination port. */
            "extends" : {"$ref", "../types/uint16.json"},
            "description" : "if not set, the field is wildcarded"
        },
        "mpls_label" : {         /* MPLS label. */
            "type" : "number",
            "minimum" : 0x00000,
            "maximum" : 0xfffff,
            "description" : "if not set, the field is wildcarded"
        },
        "mpls_tc" : {         /* MPLS TC. */
            "type" : "number",
            "minimum" : 0x00,
            "maximum" : 0xff,
            "description" : "if not set, the field is wildcarded"
        },
        "metadata" : {         /* Metadata passed between tables. */
            "extends" : {"$ref" : "../types/metadata.json"},
            "description" : "if not set, the field is wildcarded"
        },
        "metadata_mask" : {    /* Mask for metadata. */
            "extends" : {"$ref" : "../types/metadata.json"},
            "description" : "only meaningful if metadata is set; if this field is not set, no masking is applied"
        }
    ]
}
