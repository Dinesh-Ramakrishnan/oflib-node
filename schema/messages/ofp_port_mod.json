{
    "id" : "ofp_port_mod",
    "type" : "object",
    "extends" : {"$ref" : "./ofp_header.json"}   /* OFPT_PORT_MOD */
    "properties" : [
        "port_no" : {"$ref" : "../types/port_id_req.json"},
        "hw_addr" : {                                  /* The hardware address is not
                                                          configurable.  This is used to
                                                          sanity-check the request, so it must
                                                          be the same as returned in an
                                                          ofp_port struct. */
            "extends" : {"$ref" : "../types/ethernet_addr.json"},
            "required" : true
        },
        "config_set" : {  /* flags to be set */
            "type" : "array",
            "items" : {"$ref" : "../constants/ofp_port_config.json"},
            "uniqueItems" : true,
            "required" : true
        }
        "config_unset" : {     /* flags to be unset */
            "type" : "array",
            "items" : {"$ref" : "../constants/ofp_port_config.json"},
            "uniqueItems" : true,
            "required" : true
        },
        "advertise" : {
            "type" : "array",
            "items" : {"$ref" : "../constants/ofp_port_features.json"}
            "uniqueItems" : true
            "description" : "unset to prevent any action taking place."
        }
    ]
}
