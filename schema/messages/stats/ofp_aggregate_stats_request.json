{
    "id" : "ofp_aggregate_stats_request",
    "type" : "object",
    "extends" : {"$ref" : "./ofp_stats_request.json"} /* OFPST_FLOW */
    "properties" : [
        "table_id" : {         /* ID of table to read (from ofp_table_stats). */
            "extends" : {"$ref" : "../../types/uint8.json"},
            "description" : "if not set, no filtering on tables"
        },
        "out_port" : {        /* Require matching entries to include this
                                 as an output port. */
            "extends" : {"$ref" : "../../types/port_id.json"},
            "descrption" : "if not set, no filtering on output port."
        },
        "out_group" : {       /* Require matching entries to include this
                                 as an output group. */
            "extends" : {"$ref" : "../../types/group_id.json"},
            "descrption" : "if not set, no filtering on output group"
        },
        "cookie" : {          /* Require matching entries to contain this
                                 cookie value */
            "extends" : {"$ref" : "../../types/cookie.json"},
            "description" : "if not present, no filtering on cookie"
        },
        "cookie_mask" : {     /* Mask used to restrict the cookie bits that
                                 must match. A value of 0 indicates
                                 no restriction. */
            "extends" : {"$ref" : "../../types/cookie.json"},
            "description" : "if not present, cookie is not masked."
        },
        "match" : {           /* Fields to match. */
            "extends" : {"$ref" : "../../structs/ofp_match_header.json"},
            "required" : true
        }
    ]
}
